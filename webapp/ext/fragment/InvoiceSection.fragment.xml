<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <ScrollContainer
		height="100%"
		width="100%"
		horizontal="true"
		vertical="true">
		<Text text="{i18n>visibleOnlyInDisplayMode}" visible="{=${ui>/editable}}"/>
		<FlexBox direction="Column" renderType="Div"  height="600px" visible="{=!${ui>/editable}}">
        <Text text="{i18n>titleInvoiceSection}"/>
		<PDFViewer id="PDFViewer" source="{local>/Source}" errorPlaceholderMessage="{i18n>noInvoice}">
			<layoutData>
				<FlexItemData growFactor="1" />
			</layoutData>
		</PDFViewer>
		</FlexBox>
	</ScrollContainer>
</core:FragmentDefinition>