<core:FragmentDefinition xmlns:smartfield="sap.ui.comp.smartfield" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns="sap.m">
    <table:Column>
        <Label text="Payment Document #" />
        <table:template>
            <VBox>
                <Input width="100%" value="{document_no}" showValueHelp="true" valueHelpOnly="false" visible="{=${ui>/editable} &amp;&amp; !${deferral_adjust} }" valueHelpRequest=".onDNValueHelpRequested" />
                <Text width="100%" text="{document_no}" visible="{= !${ui>/editable} || ${deferral_adjust}}"/>
            </VBox>
        </table:template>
        <table:customData>
            <core:CustomData key="p13nData" value="\{&quot;columnKey&quot;: &quot;CustomColumn1&quot;, &quot;leadingProperty&quot;: &quot;document_no&quot;, &quot;columnIndex&quot;: &quot;3&quot;}" />
        </table:customData>
    </table:Column>
</core:FragmentDefinition>
