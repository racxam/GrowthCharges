<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:l="sap.ui.layout"
    xmlns:smartField="sap.ui.comp.smartfield">
    <VBox id="_IDGenVBox1" wrap="Wrap" fitContainer="true">
        <l:HorizontalLayout id="_IDGenHorizontalLayout1">
            <VBox>
                <ObjectIdentifier id="_IDGenObjectStatus0" title="{i18n>objHeaderTextVersion}" text="{version}"/>
                <ObjectIdentifier id="_IDGenObjectStatusVsnInd" visible="{=${version} !== '01'}" text="{=${new_version_created_from} === 'A' ? ${i18n>objHeaderTextManuallyCreated} : ${i18n>objHeaderTextAutoGenerated}}"/>
            </VBox>
            <ObjectIdentifier id="_IDGenObjectStatus1" title="{i18n>objHeaderTextDCID}" text="{request_id}" class="sapUiMediumMarginBegin sapUiMediumMarginBottom"/>
            <ObjectIdentifier id="_IDGenObjectStatus3" title="{i18n>objHeaderTextAddress}" text="{address}" class="sapUiMediumMarginBegin sapUiMediumMarginBottom"/>
            <ObjectIdentifier id="_IDGenObjectStatus4" title="{i18n>objHeaderTextPrvPrimBP}" text="{cond_permit_type}" visible= "{=${cond_permit} || !${cond_permit_hidden}}" class="sapUiMediumMarginBegin sapUiMediumMarginBottom"/>
             <!-- Defect 135 CIL Validity Warning Indicator added-->
            <core:Icon src="sap-icon://alert" size="1.5rem" color="red" visible="{= ${cil_validity_warning} === true }" class="sapUiSmallMarginBegin" tooltip="{i18n>cil_validity_warning}"/>
        </l:HorizontalLayout>
        <commons:MicroProcessFlow id="_IDGenMicroProcessFlow1">
            <commons:content>
                <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem1" showSeparator="{=${dc_applicable} || ${cbc_applicable}|| ${status} === 'CLSD' || ${status} === 'PCLSD' || ${status} === 'HLD'}" press=".openMilestoneDialog($event,'CIL')" visible="{cil_applicable}">
                    <commons:customControl>
                        <ObjectStatus id="_IDGenObjectStatus5" text="{i18n>titleCIL}" state="{ path: 'status', formatter: '.getStatusStateForCIL' }" inverted="true" visible="{cil_applicable}" />
                    </commons:customControl>
                </commons:MicroProcessFlowItem>
                <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem2" showSeparator="{=${cbc_applicable} || ${status} === 'CLSD' || ${status} === 'PCLSD' || ${status} === 'HLD'}" press=".openMilestoneDialog($event,'DC')" visible="{dc_applicable}">
                    <commons:customControl>
                        <ObjectStatus id="_IDGenObjectStatus6" text="{i18n>titleDC}" state="{ path: 'status', formatter: '.getStatusStateForDC' }" inverted="true" visible="{dc_applicable}"/>
                    </commons:customControl>
                </commons:MicroProcessFlowItem>
                <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem3" showSeparator="{=${status} === 'CLSD' || ${status} === 'PCLSD' || ${status} === 'HLD'}" press=".openMilestoneDialog($event,'CBC')" visible="{cbc_applicable}">
                    <commons:customControl>
                        <ObjectStatus id="_IDGenObjectStatus7" text="{i18n>titleCBC}" state="{ path: 'status', formatter: '.getStatusStateForCBC' }" inverted="true" visible="{cbc_applicable}" />
                    </commons:customControl>
                </commons:MicroProcessFlowItem>
                <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItemPCLSD" showSeparator="{=${status} === 'CLSD' || ${status} === 'HLD'}" state="{ path: 'status', formatter: '.showStatusPClosed' }" visible="{=${status} === 'PCLSD'}" press=".openMilestoneDialog($event,'PCLSD')">
                    <commons:customControl>
                        <ObjectStatus id="_IDGenObjectStatusPCLSD" text="{i18n>titlePartialClosed}" state="{ path: 'status', formatter: '.showStatusPClosed' }" inverted="true"/>
                    </commons:customControl>
                </commons:MicroProcessFlowItem>
                <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem4" showSeparator="{=${status} === 'PCLSD' || ${status} === 'HLD'}" press=".openMilestoneDialog($event,'CLSD')" visible="{=${status} === 'CLSD'}">
                    <commons:customControl>
                        <ObjectStatus id="_IDGenObjectStatus8" text="{i18n>titleClosed}" state="{ path: 'status', formatter: '.getStatusStateForClosed' }" inverted="true" visible="{=${status} === 'CLSD'}"/>
                    </commons:customControl>
                </commons:MicroProcessFlowItem>
                <commons:MicroProcessFlowItem id="_IDGenMicroProcessFlowItem5" showSeparator="false" press=".openMilestoneDialog($event,'HLD')" visible="{=${status} === 'HLD'}">
                    <commons:customControl>
                        <ObjectStatus id="_IDGenObjectStatus9" text="{i18n>titleHold}" state="{ path: 'status', formatter: '.getStatusStateForHold' }" inverted="true" visible="{=${status} === 'HLD'}"/>
                    </commons:customControl>
                </commons:MicroProcessFlowItem>
            </commons:content>
        </commons:MicroProcessFlow>
    </VBox>
</core:FragmentDefinition>