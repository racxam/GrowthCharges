<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout">
	<Popover busy="{StatusModel>/busy}" contentMinWidth="250px" busyIndicatorDelay="0" showHeader="false" class="sapUiResponsiveContentPadding" placement="VerticalPreferredBottom" modal="false">
		<HBox>
			<Text text="{i18n>labelCurrentStatus} :" />
			<Text class="sapUiTinyMarginBegin" text="{StatusModel>/action_txt}" />
		</HBox>
		<HBox>
			<Text text="{i18n>labelActionDate} :"/>
			<Text class="sapUiTinyMarginBegin" text="{ path:'StatusModel>/action_on',type:'sap.ui.model.type.DateTime', formatOptions: {pattern:'dd.MM.yyyy',UTC: true}}" />
		</HBox>
		<HBox>
			<Text text="{i18n>labelActionBy} :"/>
			<Text class="sapUiTinyMarginBegin" text="{StatusModel>/action_by_Text}"/>
		</HBox>
	</Popover>

</core:FragmentDefinition>