<core:FragmentDefinition xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.m">
    <table:Column hAlign="End">
        <Label text="{i18n>labelDCRate}" />
        <table:template>
            <HBox justifyContent="SpaceBetween" alignContent="Center" alignItems="Center" fitContainer="true">
                <HBox width="50px">
                    <core:Icon src="sap-icon://alert" visible="{is_rate_edited}" color="#E69A17" class="sapUiTinyMarginEnd" tooltip="{i18n>rate_edited}" />
                </HBox>
                <HBox>
                    <Input width="100%" value="{dc_rate}" showValueHelp="true" valueHelpOnly="true" visible="{= ${ui>/editable} &amp;&amp; ${Update_mc}}" valueHelpRequest=".onValueHelpRequested"/>
                    <Text width="100%" text="{dc_rate}" visible="{= !${ui>/editable} || !${Update_mc}}"/>
                </HBox>
            </HBox>
        </table:template>
        <table:customData>
            <core:CustomData key="p13nData" value="\{&quot;columnKey&quot;: &quot;CustomColumn1&quot;, &quot;leadingProperty&quot;: &quot;dc_rate&quot;, &quot;columnIndex&quot;: &quot;3&quot;}" />
        </table:customData>
    </table:Column>
</core:FragmentDefinition>
